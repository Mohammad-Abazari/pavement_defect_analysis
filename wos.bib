doi = {10.1016/j.engappai.2024.108632},
issn = {0952-1976},
journal = {ENGINEERING APPLICATIONS OF ARTIFICIAL INTELLIGENCE},
title = {{Contrastive decoupling global and local features for pavement crack detection}},
volume = {133},
year = {2024}
}
