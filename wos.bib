doi = {10.3390/rs14010106},
issn = {2072-4292},
journal = {REMOTE SENSING},
number = {1},
title = {{Deep Learning-Based Thermal Image Analysis for Pavement Defect Detection and Classification Considering Complex Pavement Conditions}},
