issn = {0950-0618},
journal = {CONSTRUCTION AND BUILDING MATERIALS},
title = {{An end-to-end computer vision system based on deep learning for pavement distress detection and quantification}},
volume = {416},
year = {2024}
}
@article{DeSouza2024,
abstract = {For the pavement to function effectively is essential to be durable, safe and comfortable without the surface defects. One of the most common distresses in asphalt pavements is the potholes. The detection of this type of pathological manifestation is a critical component of pavement maintenance and rehabilitation. To optimize this detection process, this study aims to train and validate a convolutional neural network (CNN) using the YOLOv4 architecture and the Darknet framework that can detect potholes. The training was performed during 6000 epochs for two databases (DB1 and DB2) with images collected from a GoPro Hero 7 camera. The validation process consisted of using the best training results in a recording together with the exposure of telemetry data extracted from the GoPro Hero 7, including the geographic coordinates. In the training results, a superiority of the DB2 was noticed, which obtained the average values of precision, recall, f1-score, IoU, mAP of 0.88, 0.85, 0.86, 69.13% and 89,25%, respectively. For validation, the highest precision obtained was 73.29% in 0.9 threshold, highest recall was 79.77% in 0.5 threshold and the highest f1-score was 70.78% in 0.7 threshold. Both results obtained, training and validation, were satisfactory. Despite the validation results being inferior to the training ones, the use of a neural model that identifies potholes and indicates their location through the geographic coordinates on the screen proved to be functional. PU  - SPRINGERNATURE PI  - LONDON PA  - CAMPUS, 4 CRINAN ST, LONDON, N1 9XW, ENGLAND},
