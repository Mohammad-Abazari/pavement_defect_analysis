journal = {EXPERT SYSTEMS WITH APPLICATIONS},
title = {{DCUFormer: Enhancing pavement crack segmentation in complex environments with dual-cross/upsampling attention}},
volume = {264},
year = {2025}
}
@article{Wen2025,
